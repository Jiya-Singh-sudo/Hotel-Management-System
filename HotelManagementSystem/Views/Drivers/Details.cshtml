@model HotelManagementSystem.Models.Driver

@{
    ViewData["Title"] = "Driver Details";
}

<h2>Driver Details</h2>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>License Number:</strong> @Model.LicenseNumber</p>
    <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.DriverId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
