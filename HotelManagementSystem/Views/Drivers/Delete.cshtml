@model HotelManagementSystem.Models.Driver

@{
    ViewData["Title"] = "Delete Driver";
}

<h2>Delete Driver</h2>

<h4>Are you sure you want to delete this driver?</h4>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>License Number:</strong> @Model.LicenseNumber</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="DriverId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
