@model IEnumerable<HotelManagementSystem.Models.Driver>

@{
    ViewData["Title"] = "Drivers";
}

<h2>Drivers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Driver</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>License Number</th>
            <th>Availability</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var driver in Model)
    {
        <tr>
            <td>@driver.Name</td>
            <td>@driver.Phone</td>
            <td>@driver.LicenseNumber</td>
            <td>@(driver.IsAvailable ? "Available" : "Not Available")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@driver.DriverId" class="btn btn-warning btn-sm">Edit</a> |
                <a asp-action="Details" asp-route-id="@driver.DriverId" class="btn btn-info btn-sm">Details</a> |
                <a asp-action="Delete" asp-route-id="@driver.DriverId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
