@model HotelManagementSystem.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<h2>Room Details</h2>

<div>
    <p><strong>Room Number:</strong> @Model.RoomId</p>
    <p><strong>Type:</strong> @Model.Type</p>
    <p><strong>Price:</strong> @Model.PricePerNight</p>
    <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
