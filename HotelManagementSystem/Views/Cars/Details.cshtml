@model HotelManagementSystem.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Model</dt>
        <dd class="col-sm-9">@Model.Model</dd>

        <dt class="col-sm-3">Make</dt>
        <dd class="col-sm-9">@Model.Make</dd>

        <dt class="col-sm-3">Driver Id</dt>
        <dd class="col-sm-9">@Model.DriverId</dd>

        <dt class="col-sm-3">Driver</dt>
        <dd class="col-sm-9">@Model.Driver</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-primary mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
