@model HotelManagementSystem.Models.Car

@{
    ViewData["Title"] = "Add Car";
}

<h2>Add New Car</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DriverId"></label>
        <input asp-for="DriverId" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="DriverId" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="Driver" class="form-check-input" />
        <label asp-for="Driver" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
