@model HotelManagementSystem.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h2>Edit Car</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CarId" />
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Driver Id"></label>
        <input asp-for="Driver Id" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-check">
        <input asp-for="Driver" class="form-check-input" />
        <label asp-for="Driver" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
