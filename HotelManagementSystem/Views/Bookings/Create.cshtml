@using HotelManagementSystem.Models
@model BookingCreateViewModel  
@{
    // This view uses a full HTML page layout, so we set Layout to null.
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Your Stay | Staywise</title>
    
    <link rel="stylesheet" href="/css/styles.css" />
    
    <style>
        :root {
            --bg: #f8f5f0;
            --accent: #d4b899;
            --accent-dark: #8b6b52;
            --text: #3e3e3e;
            --card: #ffffff;
            --shadow: rgba(0, 0, 0, 0.08);
            --bg-color: #F8F5F0;
            --text-color: #3E3E3E;
            --accent-color: #D4B899;
            --accent-vlight: #CDC4B5;
            --accent-light: #E8D5BE;
            --border-color: #A8A6A1;
            --card-bg: #FFFFFF;
            --shadow-color: rgba(0, 0, 0, 0.08);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            background: var(--bg-color);
            font-family: "Poppins", sans-serif;
            height: 100vh;
            overflow: hidden; /* ✅ no scroll */
            display: flex;
            flex-direction: column;
        }

        /* --- NAVBAR --- */
        nav {
            width: 100%;
            padding: 1rem 3rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 10;
        }

        .logo-text {
            font-family: "Glyce";
            font-size: 1.6rem;
            color: var(--accent-dark);
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--text-color);
            font-weight: 500;
            transition: 0.3s;
        }

        .nav-links a:hover {
            color: var(--accent-dark);
        }

        .login-btn {
            background: var(--accent-dark);
            color: #fff;
            border: none;
            padding: 0.6rem 1.4rem;
            cursor: pointer;
            transition: 0.3s;
        }

        .login-btn:hover {
            background: var(--accent-color);
            color: var(--text-color);
        }

        /* --- MAIN CONTAINER --- */
        .booking-container {
            display: flex;
            flex: 1;
            height: 100vh; 
            overflow: hidden;
            margin-top: 0;
        }

        .booking-image {
            flex: 1.2;
            /* 2. CORRECTED: Use absolute path for images from wwwroot */
            background: url("/images/101.png") center/cover no-repeat;
            filter: brightness(75%);
        }

        .booking-form {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 3rem 3rem;
            background: #ffffffd8;
        }

        .booking-form h2 {
            font-family: "Glyce";
            font-size: 2rem;
            color: var(--accent-dark);
            text-align: center;
            margin-bottom: 1.5rem;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        form input,
        form select {
            width: 100%;
            padding: 0.7rem;
            border: 1px solid #ccc;
            font-size: 0.95rem;
            font-family: "Poppins";
        }

        .form-row {
            display: flex;
            gap: 1rem;
        }

        .form-row > div {
            flex: 1;
        }

        .otp-row {
            display: grid;
            grid-template-columns: 1.2fr 0.8fr 0.9fr;
            gap: 0.5rem;
            align-items: end;
        }

        .otp-row button {
            background: var(--accent-dark);
            color: #fff;
            border: none;
            padding: 1rem;
            cursor: pointer;
            transition: 0.3s;
        }

        .otp-row button:hover {
            background: var(--accent-color);
            color: var(--text-color);
        }

        .id-row {
            display: flex;
            gap: 1rem;
        }

        .submit-btn {
            background: var(--accent-dark);
            color: #fff;
            border: none;
            padding: 0.9rem;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: 0.3s;
            margin-top: 0.5rem;
        }

        .submit-btn:hover {
            background: var(--accent-color);
            color: var(--text-color);
        }

        @@media (max-width: 900px) {
            .booking-container {
                flex-direction: column;
                height: auto;
                overflow-y: auto;
            }

            body {
                overflow-y: auto; /* enable scroll only for smaller screens */
            }

            .booking-image {
                height: 40vh;
            }

            .booking-form {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>
    <nav>
        <div class="logo">
        <a asp-controller="Home" asp-action="Index" class="logo-text">staywise.</a>
    </div>
    <ul class="nav-links">
        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a asp-controller="Rooms" asp-action="Index">Rooms</a></li>
        <li><a asp-controller="Bookings" asp-action="Create" style="color: var(--accent-dark)">Booking</a></li>
        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
    </ul>
    <button class="login-btn">
        <a asp-controller="Account" asp-action="Login" style="text-decoration: none; color: #fff;">Login</a>
    </button>
    </nav>

    <div class="booking-container">
        <div class="booking-image"></div>

        <div class="booking-form">
            <h2>Book Your Stay</h2>

            <form asp-controller="Bookings" asp-action="Create" method="post" id="bookingForm">
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div>
                        <label asp-for="CustomerName">Customer Name</label>
                        <input type="text" asp-for="CustomerName" class="form-control" placeholder="Enter Customer Name" required />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    
                    <div>
                        <label asp-for="DriverId">Driver ID (Optional)</label>
                        <input type="number" asp-for="DriverId" class="form-control" placeholder="Enter Driver ID (if needed)" />
                        <span asp-validation-for="DriverId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div>
                        <label asp-for="CheckInDate">Check-In</label>
                        <input type="date" asp-for="CheckInDate" required />
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="CheckOutDate">Check-Out</label>
                        <input type="date" asp-for="CheckOutDate" required />
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div>
                        <label asp-for="NumberOfGuests">Guests</label>
                        <select asp-for="NumberOfGuests" required>
                            <option value="">Select</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4+</option>
                        </select>
                        <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="RoomId">Room ID</label>
                        <input type="number" asp-for="RoomId" class="form-control" placeholder="Enter Room ID" required />
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>
                </div>
                
                <label asp-for="TotalAmount">Total Amount (Estimate)</label>
                <input type="number" asp-for="TotalAmount" placeholder="Enter estimated total amount" required />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                
                <div class="id-row">
                    <div style="flex:1">
                        <label>ID Type (Client-side only)</label>
                        <select id="idTypeSelect">
                            <option value="">Select</option>
                            <option>Aadhaar</option>
                            <option>Passport</option>
                            <option>Driver’s License</option>
                        </select>
                        <span id="idTypeError" class="upload-error">Please select an ID type.</span>
                    </div>
                    <div style="flex:1">
                        <label>Upload ID Proof (Client-side only)</label>
                        <input type="file" accept="image/*,application/pdf" id="idProofUpload" />
                        <span id="idProofError" class="upload-error">ID proof file is required.</span>
                    </div>
                </div>

                <button type="submit" class="submit-btn" id="confirmBookingBtn">Confirm Booking</button>
            </form>
        </div>
    </div>
    
    <script>
        // References to form elements
        const bookingForm = document.getElementById("bookingForm");
        const idProofUpload = document.getElementById("idProofUpload");
        const idTypeSelect = document.getElementById("idTypeSelect");
        const idProofError = document.getElementById("idProofError");
        const idTypeError = document.getElementById("idTypeError");
        
        // Simple client-side date validation
        const checkInDate = document.querySelector('input[name="CheckInDate"]');
        const checkOutDate = document.querySelector('input[name="CheckOutDate"]');
        
        if (checkOutDate && checkInDate) {
            checkOutDate.addEventListener('change', function() {
                if (this.value && checkInDate.value && this.value <= checkInDate.value) {
                    alert('Check-out date must be after check-in date');
                    this.value = '';
                }
            });
        }
        
        // FEATURE: Check if ID information is uploaded/selected
        bookingForm.addEventListener("submit", function(e) {
            let isValid = true;

            // 1. Check if an ID proof file is selected
            if (!idProofUpload || idProofUpload.files.length === 0) {
                idProofError.style.display = 'block';
                isValid = false;
            } else {
                idProofError.style.display = 'none';
            }

            // 2. Check if an ID type is selected
            if (!idTypeSelect || idTypeSelect.value === "") {
                idTypeError.style.display = 'block';
                isValid = false;
            } else {
                idTypeError.style.display = 'none';
            }

            // If validation fails, prevent submission
            if (!isValid) {
                e.preventDefault();
                // Optionally scroll to the error area
                document.getElementById('id-row')?.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        });
        
    </script>
</body>
</html>