@model IEnumerable<HotelManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Booking</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Room Type</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Total Amount</th>
            <th></th>
        </tr>
    </thead>
   <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Customer?.Name</td>
            
            {{-- FIX 1: Change RoomType to the correct property name, 'Type' --}}
            <td>@item.Room?.Type</td> 
            
            <td>@item.CheckInDate.ToShortDateString()</td>
            <td>@item.CheckOutDate.ToShortDateString()</td>
            
            {{-- FIX 2: Assuming property name is TotalAmount (or whatever is in Booking.cs) --}}
            <td>@item.TotalAmount.ToString("C")</td> 
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger">Delete</a> Â |
            </td>
        </tr>
    }
    </tbody>
</table>